<%= simple_form_for @booking, remote: true do |f| %>
  <div class="modal-body">
    <div class="mt-3">
        <img height="80" src="<%= image_path('Icons/warning_icon.png') %>" alt="warning_icon">
    </div>
    <h4 class="mt-3"><b>About to edit the calendar</b></h4>

    <p class="mt-2 fz-14 px-5">
        You have labeled this time in your calendar as "Unavailable". Are you sure you would like to delete it?
    </p>
  </div>
  <div class="modal-footer justify-content-center mb-3">
    <button type="button" class="btn btn-outline-dark mr-4" data-dismiss="modal">Cancel</button>
    <%= link_to 'Delete',
            booking,
            method: :delete,
            class: 'btn btn-danger',
            data: { confirm: 'Are you sure?' },
            remote: true unless @booking.new_record? %>
    <!-- <button type="button" class="btn btn-danger">Delete</button> -->
  </div>
<%end%>
