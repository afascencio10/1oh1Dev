<div class="container">
	<div class="row mt-4">
		<div class="col-8">
			<h2>Calendar</h2>
			<h4>Edit your calendar</h4>
		</div>
		<div class="col-4">
			<div class="row">
				<div class="col-6">
					<div>
						<button type="button" class="btn btn-link">Pending</button>
					</div>
					<div>
						<button type="button" class="btn btn-link">Guiding</button>
					</div>
				</div>
				<div class="col-6">
					<div>
						<button type="button" class="btn btn-link">Exploring</button>
					</div>
					<div>
						<button type="button" class="btn btn-link">Unavailable</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row border-top mt-4">
	  <div class="col-8 timeline-calendar-wrap">
	  	<div>
	  		<div class="btn-group" class="timeline-calendar-view-controller">
			  <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			    <i class="material-icons">more_vert</i>
			  </button>
			  <div class="dropdown-menu">
			    <a class="dropdown-item" href="#" id="daily">Daily</a>
			    <a class="dropdown-item" href="#" id="weekly">Weekly</a>
			    <a class="dropdown-item" href="#" id="monthly">Monthly</a>
			  </div>
			</div>
	  	</div>
	    <div class="timeline-calendar"></div>
	  </div>
	  <div class="col-4 border-left p-0">
	  	<div class="very-custom-calendar-wrap">
	  		<div class="calendar-current-date text-center mt-4">
	  			<span class="month-placeholder"></span>
	  			<span class="day-placeholder"></span>
	  		</div>
	  		<div class="months-wrap mt-4">
	  			<button type="button" id="month-1" class="btn btn-link month">January</button>

	  			<button type="button" id="month-2" class="btn btn-link month">February</button>

	  			<button type="button" id="month-3" class="btn btn-link month">March</button>

	  			<button type="button" id="month-4" class="btn btn-link month">April</button>

	  			<button type="button" id="month-5" class="btn btn-link month">May</button>

	  			<button type="button" id="month-6" class="btn btn-link month">June</button>

	  			<button type="button" id="month-7" class="btn btn-link month">July</button>

	  			<button type="button" id="month-8" class="btn btn-link month">August</button>

	  			<button type="button" id="month-9" class="btn btn-link month">September</button>

	  			<button type="button" id="month-10" class="btn btn-link month">October</button>

	  			<button type="button" id="month-11" class="btn btn-link month">November</button>

	  			<button type="button" id="month-12" class="btn btn-link month">December</button>
	  		</div>
			<!-- custom calendar -->
	  		<div class="very-custom-calendar"></div>
	  	</div>

		<!-- today events -->
  		<div class="event-list-wrap">
  			<ul class="event-list">
  				<li class="event">
  					<span class="event-icon has-next">
  						<i class="material-icons">check_circle_outline</i>
  					</span>
  					<span class="event-line-through-text">Call with somebody</span>
  				</li>
  				<li class="event">
  					<span class="event-icon has-next">
  						<i class="material-icons">check_circle_outline</i>
  					</span>
  					<span class="event-line-through-text">Call with somebody</span>
  				</li>
  				<li class="event">
  					<span class="event-icon has-next">14:00</span>
  					<span>Call with somebody else</span>
  				</li>
  				<li class="event">
  					<span class="event-icon">17:00</span>
  					<span>Call with somebody else</span>
  				</li>
  			</ul>
  		</div>
	  </div>
	</div>
</div>

<!-- new event dialog -->
<div class="modal fade" id="newEventDialog" tabindex="-1" role="dialog" aria-labelledby="newEventDialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
		  <div class="form-group">
		  	<select class="custom-select">
			  <option selected>Select a Subject</option>
			  <option value="1">One</option>
			  <option value="2">Two</option>
			  <option value="3">Three</option>
			</select>
		  </div>

		  <div class="new-event-date">
		  	<span class="new-event-subtext">
		  		<i class="material-icons">today</i>
		  	</span>

		  	<span class="new-event-main-text" id="newEventDateText">4 July 2019</span>
		  </div>

		  <div class="new-event-date mb-2">
		  	<span class="new-event-subtext">
		  		<i class="material-icons">access_time</i>
		  	</span>
		  	<span class="new-event-main-text" id="newEventTimeText">4:30 pm - 5:30 pm</span>
		  </div>

		  <div class="new-event-price border-top pt-1">
		  	<span class="new-event-subtext">Price:</span>
		  	<span class="new-event-main-text" id="newEventPriceText">120 <img width="25px" src="<%= image_path('coin.png') %>" alt="coin"/></span>
		  </div>

		  <div class="new-event-chest">
		  	<span class="new-event-subtext">Chest:</span>
		  	<span class="new-event-main-text" id="newEventChestText">360 <img width="25px" src="<%= image_path('coin.png') %>" alt="coin"/></span>
		  </div>

		  <div class="new-event-remaining border-bottom pb-1">
		  	<span class="new-event-subtext">Remaining:</span>
		  	<span class="new-event-main-text" id="newEventRemainingText">240 <img width="25px" src="<%= image_path('coin.png') %>" alt="coin"/></span>
		  </div>

		  <div class="new-event-buy-gcoins">
		  	<a href="">Buy more G-Coins</a>
		  </div>

		  <div class="new-event-action mt-1">
		  	<span class="new-event-action-subtext">
		  		<i class="material-icons">menu_open</i>
		  	</span>
		  	<span class="new-event-action-main-text">Add details about the session</span>
		  </div>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">More options</button>
        <button type="button" class="btn btn-primary">Submit Booking Request</button>
      </div>
    </div>
  </div>
</div>

<!-- error dialog -->
<div class="modal fade" id="newEventTimeConflict" tabindex="-1" role="dialog" aria-labelledby="newEventTimeConflict" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="time-conflict-icon mt-3">
        	<i class="material-icons">close</i>
        </div>
        <h3 class="mt-3"><b>Time conflict</b></h3>
        <p class="mt-2">
        	You are trying to book a session that conflicts with another. Please select a new time, or review <a href="">your calendar</a>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>