<%= simple_form_for @booking, remote: true do |f| %>
<div class="modal fade"
	id="profileCalendarRecurringUnavailableDialogBox"
	tabindex="-1"
	role="dialog"
	aria-labelledby="profileCalendarRecurringUnavailableDialogBox"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header px-5">
		        <h6 class="modal-title">Recurring Unavailability</h6>

		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		    </div>

			<div class="modal-body px-5 position-relative">
				<p>
					You will be unavailable during this time. These times can be changed in your settings.
				</p>
				<%= f.input_field :title, as: :hidden, value: 'Recurring', class: 'form-control input-sm start_hidden' %>
				<%= f.input_field :test, as: :hidden, value: 'none', class: 'form-control input-sm start_hidden' %>
				<%= f.input_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
				<%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>

				<% Date::DAYNAMES.each do |day| %>
					<div class="row m-0">
						<div class="col-4 pl-0">
							<div>
								<div class="checkbox-switcher">
									<div class="checkbox h_cb">
										<div class="tick">
											<div class="rect-1 h_rects"></div>
											<div class="rect-2 h_rects"></div>
										</div>
									</div>
								</div>

								<span class="align-middle ml-2">
									<%= day %>
								</span>
							</div>
						</div>
						<div class="col-8">
							<div class="time-picker-wrap d-none" id="<%= day%>">

							</div>

							<div class="mt-2 d-none">
								<button class="fz-14 btn btn-link recurringAddTimePicker">
									Add
								</button>
							</div>
						</div>
					</div>
				<% end %>

			<div class="modal-footer border-0 px-5">
		      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
		      <!-- <button type="button" class="btn btn-primary">Submit</button> -->
					<%= f.button :submit,'Submit',class: 'btn btn-primary' %>
		    </div>
		</div>
	</div>
</div>
<%end%>
