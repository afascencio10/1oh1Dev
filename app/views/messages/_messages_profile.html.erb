<div class="gridcontainer font">
      <div class="contactList background">
          <div class="celroja">
              <div class="messagesTitle">Messages</div>
              <div class="celverde" id="forSearchInput">
                <div>
                  <div class="form-group col-md-12">

                  </div>
                </div>
                <div class="searchContainer"><img class="searchIcon" src="<%= image_path('Icons/search.png')  %>"></div>
                <%= form_for_filterrific @filterrific do |f| %>
                  <div class="searchContainer">
                    <%= f.text_field(
                      :search_query,
                      class: 'filterrific-periodically-observed searchInput background',
                      placeholder: 'Search'
                    ) %>
                  </div>
                <% end %>
              </div>
          </div
          <div class="chats">
            <%= render(
              partial: 'messages/list',
              locals: { users: @users }
            ) %>
          </div>
           <div class="celdaroja chat background">
              <div class="chatHeader">
                  <div id="forChatHeader">
                      <i id="chatIcon" class="material-icons">keyboard_arrow_left</i>
                      <div class="chatTitle">Guitar</div>
                      <div class="chatSub">From: Hali</div>
                  </div>
              </div>
              <div class="card-body msg_card_body">
                  <h5 class="notSelectedTitle">You don't have a message selected</h5>
                  <p class="notSelectedText">Choose one from your existing messages</p>
                </div>
                <div class="inputChat">
                  <input id="forInputChat" placeholder="Type a message..." type="text">
                  <a class="attach" href="#">
                      <img class="attachIcon" src="<%= image_path('Icons/attach.png') %>">
                  </a>
                  <a class="send" href="#">
                      <img class="sendIcon" src="<%= image_path('Icons/send.png')  %>">
                  </a>
                </div>
          </div>
      </div>

</div>
