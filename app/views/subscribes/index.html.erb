<div class="subscription">
  <header class="site-navbar py-3 js-site-navbar site-navbar-target" role="banner" id="site-navbar">
    <div class="container">
      <img src="<%=image_path('icon.png') %>" alt="logo" class="subscription-logo">
    </div>
  </header>

  <div class="site-blocks-cover overlay" data-aos="fade" data-stellar-background-ratio="0.5" id="section-home">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
          <img src="<%=image_path('subscription/Construction.jpg') %>" alt="Icon" class="w-100">

          <h3 class="font-weight-bold text-secondary" data-aos="fade-up">
            Our site is under construction
          </h3>

          <h5 data-aos="fade-up" class="my-3 text-secondary">
            Enter your email for launch updates
          </h5>

          <%= form_tag( { :action => :create, }, { :method => :post }) do %>
            <%= email_field_tag :email,nil,class: 'form-control mt-3',placeholder: 'Enter Email Address', required: true %>

            <%= submit_tag("Subscribe",:id=>"submit", :class=>'btn btn-primary mt-3 py-2 px-4 text-white')%>
          <% end %>

          <div class="text-center mt-4 icons-wrap">
            <a href="https://www.facebook.com/1oh1edu" target="_blank" class="mx-3">
              <img src="<%=image_path('subscription/icons8-facebook-circled-50.png') %>" alt="facebook">
            </a>
            <a href="https://www.instagram.com/1oh1edu/" target="_blank" class="mx-3">
              <img src="<%=image_path('subscription/instagram-icon.png') %>" style="height:50px" alt="instagram">
            </a>
            <a href="https://www.linkedin.com/company/1oh1edu/" target="_blank" class="mx-3">
              <img src="<%=image_path('subscription/linkedin-icon.png') %>" style="height:50px" alt="linkedin">
            </a>
            <a href="https://twitter.com/1oh1edu" target="_blank" class="mx-3">
              <img src="<%=image_path('subscription/twitter-icon.png') %>" style="height:50px" alt="twitter">
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
