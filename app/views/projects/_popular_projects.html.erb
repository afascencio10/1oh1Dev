<div class="row m-0 project-cards-wrap justify-content-between">
	<% if @popular_projects.empty?%>
		No Popular Projects
	<%else%>
	<% @popular_projects.each do |project|%>
		<div class="col">
			<div class="project-card">
				<div class="image-container"
					 style="background-image: url(<%= image_path('Section/workshop.jpg') %>);">
				</div>
				<div class="headline px-4 mt-1">
					<%= project.name %>
				</div>
				<div class="headline-subtitle px-4 my-1">
					<%= project.profile.user.firstname %> <%= project.profile.user.lastname %>
				</div>
				<div class="avatars avatars-wrap px-4 mt-2">
					<div class="avatar" style="background-image: url(<%= image_path('Section/workshop.jpg') %>);"></div>
						 <div class="avatars">
						 	<div class="avatar" style="background-image: url(<%= image_path('Section/workshop.jpg') %>);"></div>
							 <div class="avatars">
							 	<div class="avatar" style="background-image: url(<%= image_path('Section/workshop.jpg') %>);"></div>
									 <div class="avatars">
									 	<div class="avatar"style="background-image: url(<%= image_path('Section/workshop.jpg') %>);"></div>
									 </div>
							 </div>
						 </div>
				</div>
				<div class="tags px-4 mb-4">
					<% project.categories.each do |category|%>
						<%=category.name%>
					<% end %>
				</div>
			</div>
		</div>
	<%end%>
<%end%>
</div>

<div class="text-right cards-show-more my-3">
	<button class="btn btn-link">
		Show more
	</button>
</div>
