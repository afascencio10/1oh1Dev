$('form#create_project').trigger("reset");
$("#createProjectsModal").modal('toggle');
var x = <%= @projects.count %>
$("#tab3-tab-project").text(x+" Projects")
<% js = escape_javascript(
  render(partial: 'profiles/projects', locals: { projects: @projects })
) %>
$("#view_projects").html("<%= js %>");

