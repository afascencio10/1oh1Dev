<div class="cell searchContainer">
    <div class="searchHelp grid">
        <div class="cell">
            <div class="searchReview grid">
                <div class="cell searchReview">
                    <div class="searchCont">
                        <i class="material-icons  md-36 searchIcon d-block">search</i><input type="text"
                            placeholder="Search" class="searchInput">
                    </div>
                </div>
                <div class="sortBy">
                    <div class="cell sortByText">Sort by</div>
                    <div class="cell">
                        <div class="dropdownTitle ">
                            <select>
                                <option>Most recent</option>
                                <option>Rating ascending</option>
                                <option>Rating descending</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="cell">
            <div class="help grid">
                <div class="tab-content custom-table">
                    <div id="tab-help">
                        <div class="cell helpText">Learn <%= @info.category.name %> with <%= @info.profile.user.firstname %></div>
                        <div class="cell">
                          <!-- <button class="button">Book</button> -->
                            <%= link_to "Book" , reserve_calendar_path(guide_id: @info.id ),class: "button"%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cell">
    <div class="reviews grid">
      <% if @guide_ratings.nil? %>
        No Guide Ratings Available
      <% else %>
        <% @guide_ratings.each do |rating| %>
            <div class="cell">
                <div class="review grid">
                    <div class="cell">
                        <div class="profile2 grid">
                            <div class="cell perfil"><%= image_tag('People/women.jpg', :class => 'imgperfil') %></div>
                            <div class="cell ratingName"><%= rating.explore.profile.user.firstname %> <%= rating.explore.profile.user.lastname %></div>
                            <%= rating.guide.category.name %>
                            <div class="grid score2">
                                <div class="cell"><i class="material-icons md-36"> start</i></div>
                                <div class="cell"><i class="material-icons md-36"> start</i></div>
                                <div class="cell"><i class="material-icons md-36"> start</i></div>
                                <div class="cell"><i class="material-icons md-36"> start</i></div>
                                <div class="cell"><i class="material-icons md-36"> start</i></div>
                            </div>
                        </div>
                    </div>
                    <div class="cell ratingText">
                      <%= rating.review %>
                    </div>
                </div>
            </div>
          <%end%>
        <%end%>
    </div>
</div>
