<div class="modal fade" id="editExploreModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Interests</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modalCategories redcel">
          <div>
            <div class="redcel"> </div>
            <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
              <div class="form-group">
                <label for="">Search in categories</label>
                <%= f.text_field(
                  :search_query,
                  class: 'filterrific-periodically-observed form-control',
                  placeholder: 'Oil painting, 3D printing, Electric cars etc...'
                ) %>
              </div>
              <%= render_filterrific_spinner %>
            <% end %>
            <div>
              <span class="fz-14 fw-400 c-black">Can't find a category?</span>
              <span data-toggle="modal" data-target="#newCategoryModal" class="c-blue fz-14 fw-400 cursor-p"> Create a new category.</span>
            </div>
          </div>

          <ul class="nav nav-tabs pt-4" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="addCategory-tab" data-toggle="tab" href="#addCategory" role="tab" aria-controls="home" aria-selected="true">Add Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="yourInterest-tab" data-toggle="tab" href="#yourInterest" role="tab" aria-controls="profile" aria-selected="false">Your Interest</a>
			      </li>
          </ul>

          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="addCategory" role="tabpanel" aria-labelledby="home-tab">
              <div class="p-3 border position-relative auxiliar-container" id="explore-item-containerP">
                <%= render(
                  partial: 'list',
                  locals: { categories: @categories }
                ) %>
              </div>
              <input type="hidden" id="exploreCategories" name="exploreCategories">
            </div>

            <div class="tab-pane fade" id="yourInterest" role="tabpanel" aria-labelledby="profile-tab">
              <div class="categoriesGrid redcel border rounded">
                <% if @explores.blank? %>
                  <div class="gridGuidingActivity">
                      <div class="titleactivityProfile toptitleActivity">
                        <span class="titleYetAdd">Nothing added yet</span>
                      </div>
                      <div class="gridImgActivity">
                          <div class=""></div>
                          <div class="">
                              <img src="<%= image_path('Icons/yet.png') %>" alt="Image" class="imgYet">
                          </div>
                          <div class=""></div>
                      </div>
                  </div>
                <% else %>
                    <% @explores.each do|explore| %>
                      <div class="interestsImage py-2">
                         <img class="imagesInterests" src="<%= explore.url %>">
                      </div>
                   <% end %>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
