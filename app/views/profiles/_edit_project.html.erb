<div class="modal fade" id="projectsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_tag(Project.first,:url => {:controller => :projects, action: :update},method: :put ,remote: true,:id => 'edit_project' ) do %>
        <div class="modal-header">
          <h5 class="modal-title">Edit Project</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body bodyEditProject" >
          <!-- Project Title -->
          <div class="form-group m-3">
            <label>Project Title</label>
            <%= text_field_tag :name,nil,class: 'form-control', placeholder: "Name", id:"project_name", :required => true %>
          </div>
          <input type="hidden" name="id" id="edit_project_id">
          <!-- Description -->
          <div class="form-group m-3">
            <label>Description</label>
            <%= text_area_tag :description,nil,class: 'form-control',id:"project_description", placeholder: "Describe It",:required => true, rows: "3" %>
          </div>

          <!-- Project Image -->
          <div class="form-group m-3">
            <label for="edit_url">Project Image</label>
            <div class="custom-file">
              <%= file_field_tag :edit_url,
                  class: 'custom-file-label',
                  id: "edit_url" %>
              <label class="custom-file-label" for="edit_url">Project Image...</label>

              <i style="display: none" class="fa fa-spinner create-project-upload-loading" id="loaderedit"></i>
              <i style="display: none; color:green" class="fa fa-check create-project-upload-loading" id="checkedit"></i>
            </div>
          </div>

          <!-- Creator -->
          <div class="m-3">
            <span class="fsz-13">Creator</span>
            <div class="mt-2">
              <img class="rounded-circle"
                 width="70px"
                 height="70px"
                 src="<%= image_path ('People/asian-square.jpg') %>">
              <span class="c-black fw-500 ml-2">Jimi Hendrix</span>
            </div>
          </div>

          <!-- Collaborators -->
          <div class="create-project-collaborators-select-wrap">
            <div class="form-group custom-from-group m-3">
              <label>Collaborators</label>

              <%=select_tag "colab_id", options_from_collection_for_select(User.all,"id","firstname"),class: 'custom-select',:required => true, id: 'edit_project_colab'%>
              <input type="hidden" id="edit-project-hidden-collaborators" name="edit-project-collaborators">

              <i class="material-icons create-project-select-collaborator-add"
                 id="edit-project-collaborator-add">add</i>
            </div>

            <div class="create-project-collaborators m-3" id="edit-project-collaborators">
            </div>
          </div>

          <!-- allow help -->
          <div class="form-group m-3">
            <label>Allow others to offer their help?</label>
            <div>
              <div class="d-inline-block align-middle">
                <label class="mb-0">No</label>
              </div>
              <label class="switch align-middle mx-1 mb-0">
                <input type="checkbox">
                <span class="slider round"></span>
              </label>
              <label class="align-middle mb-0">Yes</label>
            </div>
          </div>

          <!-- categories -->
          <div class="create-project-categories-select-wrap">
            <div class="form-group custom-from-group m-3">
              <label>categories</label>

              <%=select_tag "“category_id”", options_from_collection_for_select(Category.all,"id","name"),class: 'custom-select',:required => true, id: 'edit_project_category_select'%>
              <input type="hidden" id="edit-project-hidden-categories" name="edit-project-categories">

              <i class="material-icons create-project-select-categories-add"
                 id="edit-project-categories-add">add</i>
            </div>

            <div class="create-project-categories m-3" id="edit-project-categories">
            </div>
          </div>

          <!-- projects -->
          <div class="form-group mx-3 mb-0">
            <label>Project Status</label>
          </div>
          <div class="form-row mx-3 mb-3">
            <div class="custom-control form-group custom-radio custom-radio-with-image mr-3">
              <input type="radio" class="custom-control-input" id="edit-project-raido-0" name="help" required>
              <label class="custom-control-label" for="edit-project-raido-0">
                <img width="30px" src="<%= image_path ('Icons/Idea_icon.png') %>">
                Idea
              </label>
            </div>

            <div class="custom-control form-group custom-radio custom-radio-with-image mx-3">
              <input type="radio" class="custom-control-input" id="edit-project-raido-1" name="help" required>
              <label class="custom-control-label" for="edit-project-raido-1">
                <img width="30px" src="<%= image_path ('Icons/WIP-icon.png') %>">
                In Progress
              </label>
            </div>

            <div class="custom-control form-group custom-radio custom-radio-with-image">
              <input type="radio" class="custom-control-input" id="edit-project-raido-2" name="help" required>
              <label class="custom-control-label" for="edit-project-raido-2">
                <img width="30px" src="<%= image_path ('Icons/completed-icon.png') %>">
                Complete
              </label>
            </div>
          </div>

          <div class="container">
            <input type="text" hidden id="url_edit" name="url_edit">
          </div>
        </div>
        <div class="modal-footer">
           <div class="celr" id="gridbtnSave">
               <div class="cel btnSave">
                <%= submit_tag("Edit Project",:id=>"submit_edit_project", :class=>'btn btn-success',data: { disable_with: "Editing..." })%>
              </div>
           </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
