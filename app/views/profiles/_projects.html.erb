<div class="projectsSection">
    <div class="projectsContent">
      <div class="projectsSearchCreate">
       <div class="inputSearchProjects">
          <div class="inputProjectsSearch">
            <img class="searchProjectIcon" src="<%= image_path ('Icons/search.png') %>">
            <input class="searchProjectsInput" type="" name="">
          </div>
       </div>
       <div class="checkBoxProjectIcon">
         <img class="projectProgressIcon" src="<%= image_path ('Icons/Idea_icon.png') %>">
       </div>
       <div class="checkBoxProjectIcon">
         <img class="projectProgressIconWip" src="<%= image_path ('Icons/WIP-icon.png') %>">
       </div>
       <div class="checkBoxProjectIcon">
         <img class="projectProgressIconCompleted" src="<%= image_path ('Icons/completed-icon.png') %>">
       </div>
       <div class="checkBoxProject boxIdea">
         <input type="checkbox" class="checkProjectIdea" name="">
       </div>
       <div class="checkBoxProject boxWip">
         <input type="checkbox" class="checkProjectWip" name="">
       </div>
       <div class="checkBoxProject boxCompleted">
         <input type="checkbox" class="checkProjectCompleted" name="">
       </div>
       <div class="buttonCreateProject">
         <button class="buttonCreate" data-toggle="modal" data-target="#createProjectsModal">CREATE</button>
       </div>
     </div>
      <% if @projects.blank? %>
            <div class="gridProfileActivity">
              <div class="titleactivityProfile">
                <span class="titleYetAdd">Nothing added yet</span>
              </div>
              <div class="gridImgActivity">
                <div class=""></div>
                <div class="">
                  <img src="<%= image_path('Icons/yet.png') %>" alt="Image" class="imgYet">
                </div>
                <div class=""></div>
              </div>
            </div>

      <% else %>        
         <% @projects.each do|project| %>            
              <div class="projectInContainer projectContainer">
                 <div class="projectImages">
                     <div class="projectPhoto">
                         <img class="projectPicture" src="<%= project.image %>">
                         <% if project.status == 1 %>
                              <img src="<%= image_path('Icons/Idea_icon.png') %>" alt="Image" class="projectIcon">
                            <% elsif project.status == 2 %>
                              <img src="<%= image_path('Icons/WIP-icon.png') %>" alt="Image" class="projectIcon">
                            <% else %>
                              <img src="<%= image_path('Icons/completed-icon.png') %>" alt="Image" class="projectIcon">
                          <% end %>
                     </div>

                     <div class="projectProfiles">
                       <% project.colab_id.each do |x|%>
                         <div class="profilePict">
                           <% if User.find(x).profile.nil?%>
                           <img class="profileImage" src="<%= image_path('no_profile.png')  %>">
                           <%else%>
                           <img class="profileImage" src="<%= User.find(x).profile.profile_photo %>">
                           <%end%>
                         </div>
                       <% end %>
                     </div>
                 </div>
                 <div class="projectInfo">
                     <div class="projectTitle"><%= project.name %></div>
                     <div class="editIconProject">
                         <i data-toggle="modal" data-target="#projectsModal" class="material-icons icons create">create</i>
                     </div>
                     <div class="projectDescription"><h3 class="descriptionTitle">Description</h3> <p class="descriptionText"> <%= project.description %></p></div>
                     <div class="projectSkills"><h3 class="descriptionTitle">Skills needed</h3>
                     </div>
                 </div>
             </div>            
         <% end %>         
      <% end %>
      <div>
        <button id="showLessButton">Show Less</button>
        <button id="showMoreButton">Show More</button>        
      </div>      
    </div>
</div>
