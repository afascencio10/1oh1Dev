<%=  render 'landing/navbar' %>

<div class="container profile-builder">
 <div class="position-relative">
   <div class="page-3">
     <h1 class="headline">Guide</h1>

     <p class="headline-description mt-4">Add categories that you would be comfortable teaching to others.</p>

     <img class="headline-image" src="<%= image_path('Icons/Guide Graphic.png')%>" alt="confetti">
   </div>
 </div>


 <div class="mt-5">
   <div class="row">
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-1 active">
       <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-person-100.png')%>" alt="person">
       </div>
     </div>
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-2 active">
       <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-telescope-100.png')%>" alt="telescope">
       </div>
     </div>
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-3 active">
         <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-treasure-map-100.png')%>" alt="treasure-map">
       </div>
     </div>
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-4">
         <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-goal-100.png')%>" alt="goal">
       </div>
     </div>
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-5">
         <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-calendar-25-100.png')%>" alt="calendar">
       </div>
     </div>
     <div class="col text-center p-0 navigation-item-wrap navigation-item-wrap-6">
         <div class="navigation-item rounded-circle d-inline-block">
         <img src="<%= image_path('Icons/icons8-checkmark-100.png')%>" alt="checkmark">
       </div>
     </div>
   </div>
 </div>


 <div class="mt-5 page-3">
   <%= render 'third_page' %>
 </div>



 <div class="form-row justify-content-end mb-5" id="action-buttons">
   <a class="btn btn-outline-dark p-2 mr-3" href="/profile/explores">Prev</a>

   <a class="btn btn-success p-2" href="/profile/projects">Next</a>
 </div>
</div>


<%= javascript_include_tag 'profile_builder.js' %>
