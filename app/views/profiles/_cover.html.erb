<div class="site-blocks-cover inner-page-cover" style="background-image: url(<%= image_path('Section/rock.jpg') %>);" data-aos="fade" id="section-home">
	<div class="page-banner">
		<div class="container row align-items-center justify-content-center text-center zi-1 position-relative">
      <%if !@profile.profile_photo.blank? %>
        <img src="<%= @profile.profile_photo %>" alt="Image" class="fix-profile rounded">
      <% else %>
        <img src="<%= image_path('People/default.png') %>" alt="Image" class="fix-profile rounded">
      <% end %>

			<div class="text-left pb-1 mb-4 fix-stars">
				<h1 class=" text-black font-weight-light"> ***** </h1>
			</div>

			<div class="col-md-12" data-aos="fade-up" data-aos-delay="400">
				<div class="  text-left pb-1 mb-4">
					<h1 class=" text-white font-weight-bold"> Profile </h1>
				</div>
        <div class="input-group-append justify-content-md-end">
          <a href="#" class="btn custom-btn-outline-primary-bright" data-toggle="modal" data-target="#editprofile" >Edit Profile</a>
        </div>
			</div>
		</div>
	</div>
</div>

<%= render 'editprofile' %>

<div class="site-section block-13 border-bottom" id="section-explorers">
<div class="container">
	<div class="row">
    <div class="col-md-12">
      <div class="text-left pb-1 mb-4 ">
        <h3 class="text-black font-weight-bold"><%= current_user.firstname%>&nbsp<%= current_user.lastname %></h3>
      </div>
    </div>

	</div>
	<div class="row">
    <div class="col-md-8">
      <div class="text-left pb-1 mb-4 ">
        <h3 class="text-black font-weight-light">
					<% if @profile.state.nil? && @profile.country.nil? %>
					Location : None
					<% else %>
						<%= @profile.state%>,<%= @profile.country%></h3>
					<% end %>

      </div>
    </div>

  <div class="col-md-4">
    <div class="input-group-append">
      <a href="/explores" class="btn btn-outline custom-btn-outline-primary">Message</a>
    </div>
  </div>


	</div>
	<div class="row">
    <div class="col-md-8">
      <div class="text-left pb-1 mb-4 ">
        <h3 class="text-black font-weight-light">Languages:
					<% if @profile.languages.empty? %>
						None
					<% else %>
					<%= @profile.languages %>
					<% end %>
				</h3>
      </div>
    </div>

    <div class="col-md-4">
      <div class="input-group-append">
        <a href="/bookings" class="btn btn-outline custom-btn-outline-primary">Calendar</a>
      </div>
    </div>
	</div>
  <div class="row">
    <div class="col-md-12">
			<%if @profile.bio.nil? %>
				Bio not updated
			<% else %>
      	<%= @profile.bio%>
			<% end %>
    </div>

  </div>

  <div class="row align-items-center justify-content-center"  style="padding-top: 30px">
    <div class="col-md-12">
      <div class="input-group-append">
        <a href="/explores" class="btn btn-outline custom-btn-outline-primary">Explorations</a>
        <a href="/guides" class="btn btn-outline custom-btn-outline-primary">Guiding</a>
        <a href="/projects" class="btn btn-outline custom-btn-outline-primary">Projects</a>
      </div>
    </div>

  </div>

</div>
</div>
