<% @pending_bookings.each do |booking|%>
  <div id="bookings-pending-btn-content" class="border mt-5">
    <div class="response-wrap text-right border p-3">
      <div class="progress-circle d-inline-block align-middle mt-2 mr-2" id="bookings-circle">
      </div>
      <span class="secondary-success-color fz-14 align-middle">80% response rate</span>
    </div>
    <div class="content-wrap border p-3">
      <div>
        <img width="40px" class="rounded-circle mr-2 active" src="<%= image_path('person_6.jpg') %>" alt="avatar">

        <span class="font-weight-bold fz-14">subject</span> - <span class="fz-14"><%= booking.guide.category.name %> with Claire Johnston</span>

        <span class="float-right fz-14 mt-1">
          <span><%= local_time(booking.start,'%B %e, %Y')%>&emsp;</span>
          <span><%= local_time(booking.start,'%l:%M %P') %> - <%= local_time(booking.start,'%l:%M %P')%>&emsp;</span>
          <span class="font-weight-bold">+120 <img width="25px" src="<%= image_path('coin.png') %>" alt="coin"></span>
        </span>
      </div>
      <p class="fz-14 my-4"><%= booking.title %></p>

      <div>
        <button type="button" class="btn rounded-0 btn-primary">Approve</button>
        <button type="button" class="btn rounded-0 btn-outline-secondary mx-3">Decline</button>
        <button type="button" class="btn rounded-0 btn-outline-secondary">Respond</button>
      </div>
    </div>
  </div>
<% end %>
