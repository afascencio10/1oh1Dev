<div class="modal fade"
	id="sendTipDialog"
	tabindex="-1"
	role="dialog"
	aria-labelledby="sendTipDialog"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<%= form_tag(send_tip_path(format: :js), :method => "post", remote: true) do %>
				<div class="modal-header px-5">
			        <h4 class="modal-title">Thanks for your review!</h4>

			        <button type="button" class="close pt-4" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			    </div>

			    <div class="modal-body px-5 position-relative">
						<p>Would you like to give ashton a tip?</p>
						<div>
							<div id="send-tip-options" class="btn-group send-tip-options mt-3" role="group" aria-label="Basic example">
							  <button type="button" class="btn btn-outline-secondary">
							  	10%
							  	<br>
							  	<span>
							  		<b class="align-middle">12</b>
							  		<img width="25px" src="<%= image_path('coin.png') %>" alt="coin">
							  	</span>
							  </button>
							  <button type="button" class="btn btn-outline-secondary">
							  	15%
							  	<br>
							  	<span>
							  		<b class="align-middle">18</b>
							  		<img width="25px" src="<%= image_path('coin.png') %>" alt="coin">
							  	</span>
							  </button>
							  <button type="button" class="btn btn-outline-secondary sent-tip-custom-btn">
							  	<b>Custom</b>
							  </button>
							  <button type="button" disabled class="btn btn-outline-secondary sent-tip-input-btn">
							  	<input type="text" maxlength="6">

							  	<img width="25px" src="<%= image_path('coin.png') %>" alt="coin">
							  </button>
							</div>
						</div>
			    </div>

			    <div class="modal-footer border-0 px-5">
			    	<button type="button" class="btn btn-outline-secondary mr-3" data-dismiss="modal">
				     	No Thanks
				    </button>
						<input type="hidden" name="booking_id" id="send_tip_booking">
						<%= submit_tag 'Send', class:"btn btn-success",data: { disable_with: "Sending..." } %>
			    </div>
			 <%end%>
		</div>
	</div>
</div>
