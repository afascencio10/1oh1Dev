
<!-- Modal -->
<div class="modal fade timeUpModal" id="timesUp" tabindex="-1" role="dialog" aria-labelledby="timesUp" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <!-- --  -->
      <div class="modal-header">
        <span class="modal-title titleModalTimesUp text-center" id="exampleModalLabel">Times up!</span>
      </div>
      <div class="modal-body grid-timeUpModal">
        <!-- --  -->
        <div class="main">
          <div class="top-body">
            <span class="notice">Please rate your experience with</span>
            <% if params["peer_id"]%>
              <span class="name"><%= Profile.find(params["peer_id"]).user.firstname %> <%= Profile.find(params["peer_id"]).user.lastname %></span>
            <%end%>
          </div>
            <!-- person image  -->
          <div class="midle-body">
            <div class="imageContainer">
              <%= image_tag('People/adult.jpg', :class => "img-fluid") %>
            </div>
            <!-- starts  -->
            <div class="startsContainer">
                <div id="" class="rateYoInput" rating="3"></div>
            </div>
          </div>

          <div class="end-body">
            <div class="comments">
              <%= form_tag(reviews_path, :method => "post", remote: true) do %>
                <input type="hidden" id="rateExperience" value="3" name="rating">
                <input type="hidden" id="peer_id" value="<%= params["peer_id"] %>" name="peer_id">
                <input type="hidden" id="booking_id" value="<%= params["id"] %>" name="booking_id">
                <input type="hidden" id="user_id" value="<%= params["profile_id"] %>" name="user_id">
                <input type="text" placeholder="Leave a comment" name="review" class="form-control commentField">
                <%= submit_tag 'Submit', class:"btn btn-submit w-100",data: { disable_with: "Submitting..." } %>
              <%end%>
            </div>

            <div class="last-text-body">
              <span data-dismiss="modal" class="text-secondary">Rate later</span>
            </div>
          </div>
        </div>
        <!-- --  -->
        <div class="container-right-modal">
            <!-- button dropdown -->
            <div class="btn-group dropleft">
              <!-- Activator -->
              <i class="material-icons icon-3 icon-dropdown-option" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup ="true" aria-expanded = "false">more_vert</i>
              <!-- Options -->
                <div class="dropdown-menu" data-toggle="modal" data-target="#reportProblem">
                  Report
                </div>
            </div>
        </div>
        <!-- --  -->
      </div>
    </div>
  </div>
</div>

<%= render 'bookings/report_problem' %>
